@model IEnumerable<CalumBSUAttempt2.Models.Genre>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @{
                @Html.ActionLink("Create New", "Create")
        }
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.GenreId })
                @{
                    if (ViewBag.userId == item.User)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.GenreId });
                                @Html.ActionLink("Delete", "Delete", new { id = item.GenreId });
                            }
                        }

            </td>
        </tr>
    }
    
    </table>
</body>
</html>
