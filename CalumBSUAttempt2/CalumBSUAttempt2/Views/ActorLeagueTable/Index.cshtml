@model IEnumerable<CalumBSUAttempt2.Models.Actor>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
   
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActorImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.ActionLink("Rating", "Index", new { sort = ViewBag.RatingSortPar })
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                <img height=200 width=200 src=@Url.Content(item.ActorImage) alt="http://www.santelenaservice.it/wp-content/uploads/2016/03/default-person.jpg">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.ActorId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
