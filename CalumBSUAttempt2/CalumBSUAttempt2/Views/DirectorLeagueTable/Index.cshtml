@model IEnumerable<CalumBSUAttempt2.Models.Director>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DirectorImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectorName)
            </th>
            <th>
                @Html.ActionLink("Rating", "Index", new { sort = ViewBag.RatingSortPar })
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @{
                    if (item.DirectorImage != null)
                    {
                        <img height=100 width=100 src=@Url.Content(item.DirectorImage) alt="Image">
                    }
                    else
                    {
                        <img height=100 width=100 src="https://app.reklist.com/assets/img/avatars/movie-poster-001.png" alt="Default Image">
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.DirectorId }) 
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
